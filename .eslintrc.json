{
    "env": {
        "browser": true,
        "commonjs": true,
				"es6": true,
				"node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
			"no-process-env": "off",
      "semi": ["error", "always"],
			"indent": [2, "tab"],
			"no-console": "off",
			"no-path-concat": "off"
    }
}